{
  "@id": "/test-page",
  "@type": "Document",
  "id": "test-page",
  "title": "Test Page",
  "description": "A test page with blocks",
  "preview_image": {
    "@type": "Image",
    "download": "https://placehold.co/300x200",
    "filename": "preview.jpg",
    "scales": {
      "preview": {
        "download": "https://placehold.co/300x200"
      }
    }
  },
  "blocks": {
    "block-1-uuid": {
      "@type": "slate",
      "value": [
        {
          "type": "p",
          "children": [{ "text": "This is a test paragraph" }]
        }
      ],
      "plaintext": "This is a test paragraph"
    },
    "block-2-uuid": {
      "@type": "image",
      "url": "https://placehold.co/600x400",
      "alt": "Test image"
    },
    "block-3-uuid": {
      "@type": "slate",
      "value": [
        {
          "type": "p",
          "children": [{ "text": "Another paragraph for testing" }]
        }
      ],
      "plaintext": "Another paragraph for testing"
    },
    "block-4-hero": {
      "@type": "hero",
      "heading": "Welcome Hero",
      "subheading": "This is the hero subtitle",
      "buttonText": "Click Me",
      "buttonLink": [{ "@id": "/target-page", "title": "Target Page" }],
      "image": "https://placehold.co/800x400",
      "description": [
        { "type": "p", "children": [{ "text": "Rich text description" }] }
      ]
    },
    "block-5-linked-image": {
      "@type": "image",
      "url": "https://placehold.co/600x400",
      "alt": "Linked test image",
      "href": "https://example.com"
    },
    "block-6-empty-teaser": {
      "@type": "teaser",
      "href": [],
      "title": "",
      "description": ""
    },
    "block-7-filled-teaser": {
      "@type": "teaser",
      "href": [{ "@id": "/target-page", "title": "Target Page", "description": "Target page description", "hasPreviewImage": true }]
    },
    "block-8-grid": {
      "@type": "gridBlock",
      "blocks": {
        "manual-teaser": {
          "@type": "teaser",
          "title": "Manual Item",
          "description": "This is a manually added teaser",
          "href": [{ "@id": "/target-page", "title": "Target Page" }]
        },
        "listing-in-grid": {
          "@type": "listing",
          "headline": "Featured Items",
          "itemType": "teaser",
          "fieldMapping": {
            "@id": "href",
            "title": "title",
            "description": "description",
            "image": "preview_image"
          },
          "querystring": {
            "query": [
              {
                "i": "portal_type",
                "o": "plone.app.querystring.operation.selection.any",
                "v": ["Document"]
              }
            ],
            "sort_on": "effective",
            "sort_order": "descending"
          }
        }
      },
      "blocks_layout": {
        "items": ["manual-teaser", "listing-in-grid"]
      }
    },
    "block-9-listing": {
      "@type": "listing",
      "headline": "Featured Items",
      "itemType": "teaser",
      "querystring": {
        "query": [
          {
            "i": "portal_type",
            "o": "plone.app.querystring.operation.selection.any",
            "v": ["Document"]
          }
        ],
        "sort_on": "effective",
        "sort_order": "descending"
      }
    }
  },
  "blocks_layout": {
    "items": ["block-1-uuid", "block-2-uuid", "block-3-uuid", "block-4-hero", "block-5-linked-image", "block-6-empty-teaser", "block-7-filled-teaser", "block-8-grid", "block-9-listing"]
  }
}
